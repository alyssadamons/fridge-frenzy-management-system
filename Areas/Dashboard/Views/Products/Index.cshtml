@model IEnumerable<E_Commerce.Models.Product>

@{
    ViewData["Title"] = "Products Management";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Products Management</h1>

        <!-- Header Actions -->
        <div class="card mb-3 border-0 shadow-sm">
            <div class="card-body py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title mb-0">Product Catalog</h5>
                        <p class="text-muted mb-0">Manage your product inventory</p>
                    </div>
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Add Product
                    </a>
                </div>
            </div>
        </div>

        <!-- Filters Card -->
        <div class="card mb-3 border-0 shadow-sm">
            <div class="card-body">
                <form method="get" asp-action="Index" id="filterForm">
                    <div class="row g-3 align-items-end">
                        <!-- Search by Name -->
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-search me-1"></i>Search Product
                            </label>
                            <input type="text" name="searchName" class="form-control" placeholder="Product name..." value="@ViewData["SearchName"]" />
                        </div>

                        <!-- Filter by Category -->
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-tag me-1"></i>Category
                            </label>
                            <select name="categoryId" class="form-select">
                                <option value="">All Categories</option>
                                @if (ViewBag.Categories != null)
                                {
                                    foreach (var category in ViewBag.Categories)
                                    {
                                        <option value="@category.Id" selected="@(ViewData["CategoryId"]?.ToString() == category.Id.ToString())">
                                            @category.Name
                                        </option>
                                    }
                                }
                            </select>
                        </div>

                        <!-- Sort By -->
                        <div class="col-md-2">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-sort me-1"></i>Sort By
                            </label>
                            <select name="sortOrder" class="form-select">
                                <option value="name_asc" selected="@(ViewData["SortOrder"] == "name_asc")">Name (A-Z)</option>
                                <option value="name_desc" selected="@(ViewData["SortOrder"] == "name_desc")">Name (Z-A)</option>
                                <option value="price_asc" selected="@(ViewData["SortOrder"] == "price_asc")">Price (Low-High)</option>
                                <option value="price_desc" selected="@(ViewData["SortOrder"] == "price_desc")">Price (High-Low)</option>
                            </select>
                        </div>

                        <!-- Buttons -->
                        <div class="col-md-4">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary flex-grow-1">
                                    <i class="fas fa-filter me-1"></i>Apply Filters
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-redo me-1"></i>Clear
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Products Table -->
        <div class="card mb-4 border-0 shadow-sm">
            <div class="card-header bg-light border-0">
                <i class="fas fa-table me-1"></i>
                Products List
                <span class="badge bg-primary ms-2">@Model.Count()</span>
            </div>
            <div class="card-body p-0">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="align-middle">Image</th>
                                    <th class="align-middle">Name</th>
                                    <th class="align-middle">Price</th>
                                    <th class="align-middle">Category</th>
                                    <th class="align-middle">Description</th>
                                    <th class="align-middle text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model)
                                {
                                    <tr>
                                        <td class="align-middle">
                                            <div class="product-image-box">
                                                @if (!string.IsNullOrEmpty(product.Image))
                                                {
                                                    <!-- FIXED: Use consistent image path handling -->
                                                    <img src="@Url.Content($"~{product.Image}")" alt="@product.Name" class="product-table-img"
                                                         onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                                    <div class="no-image-placeholder" style="display: none;">
                                                        <i class="fas fa-image fa-2x text-muted"></i>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="no-image-placeholder">
                                                        <i class="fas fa-image fa-2x text-muted"></i>
                                                    </div>
                                                }
                                            </div>
                                        </td>
                                        <td class="align-middle fw-semibold">@product.Name</td>
                                        <td class="align-middle fw-bold">R @product.Price.ToString("N2")</td>
                                        <td class="align-middle">
                                            @if (product.Category != null)
                                            {
                                                <span class="badge bg-info">@product.Category.Name</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">No Category</span>
                                            }
                                        </td>
                                        <td class="align-middle">
                                            @if (!string.IsNullOrEmpty(product.Description))
                                            {
                                                <span title="@product.Description">
                                                    @(product.Description.Length > 50 ? product.Description.Substring(0, 50) + "..." : product.Description)
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No description</span>
                                            }
                                        </td>
                                        <td class="align-middle text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-outline-info btn-sm" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-outline-warning btn-sm" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-outline-danger btn-sm" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No Products Found</h5>
                        @if (!string.IsNullOrEmpty(ViewData["SearchName"]?.ToString()) || !string.IsNullOrEmpty(ViewData["CategoryId"]?.ToString()))
                        {
                            <p class="text-muted">Try adjusting your filters or search criteria.</p>
                            <a asp-action="Index" class="btn btn-outline-primary">
                                <i class="fas fa-redo me-2"></i>Clear Filters
                            </a>
                        }
                        else
                        {
                            <p class="text-muted">Get started by adding your first product.</p>
                            <a asp-action="Create" class="btn btn-success">
                                <i class="fas fa-plus me-2"></i>Add First Product
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</main>

<style>
    .product-image-box {
        width: 60px;
        height: 60px;
        margin: 0 auto;
    }

    .product-table-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 4px;
    }

    .no-image-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
        border-radius: 4px;
    }

    .btn-group .btn {
        margin: 0 2px;
    }
</style>