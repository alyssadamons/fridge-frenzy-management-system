@* Areas/Dashboard/Views/Logs/Index.cshtml *@
@model List<E_Commerce.Models.AppLog>

@{
    ViewData["Title"] = "System Logs";
}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">System Logs</h1>
        

        <!-- Summary Cards -->
        <div class="row">
            <div class="col-xl-3 col-md-6">
                <div class="card bg-primary text-white mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <div class="fs-4">@ViewBag.TotalLogs</div>
                                <div>Total Logs</div>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-clipboard-list fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filters -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-filter me-1"></i>
                Filter Logs
            </div>
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Action Type</label>
                        <select name="actionFilter" class="form-select">
                            <option value="">All Actions</option>
                            <option value="UserCreated" selected='@(ViewBag.ActionFilter == "UserCreated")'>User Created</option>
                            <option value="EmployeeAdded" selected='@(ViewBag.ActionFilter == "EmployeeAdded")'>Employee Added</option>
                            <option value="CustomerAdded" selected='@(ViewBag.ActionFilter == "CustomerAdded")'>Customer Added</option>
                            <option value="OrderPlaced" selected='@(ViewBag.ActionFilter == "OrderPlaced")'>Order Placed</option>
                            <option value="AppointmentCreated" selected='@(ViewBag.ActionFilter == "AppointmentCreated")'>Appointment Created</option>
                            <option value="DashboardAccessed" selected='@(ViewBag.ActionFilter == "DashboardAccessed")'>Dashboard Access</option>
                            <option value="UserLogin" selected='@(ViewBag.ActionFilter == "UserLogin")'>User Login</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">From Date</label>
                        <input type="date" name="fromDate" class="form-control" value='@(ViewBag.FromDate?.ToString("yyyy-MM-dd"))' />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">To Date</label>
                        <input type="date" name="toDate" class="form-control" value='@(ViewBag.ToDate?.ToString("yyyy-MM-dd"))' />
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">Filter</button>
                        <a asp-action="Index" class="btn btn-secondary">Clear</a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Logs Table -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Activity Logs
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Timestamp</th>
                            <th>Action</th>
                            <th>Description</th>
                            <th>User</th>
                            <th>Affected User</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model)
                        {
                            <tr>
                                <td>@log.Timestamp.ToString("MM/dd/yyyy HH:mm")</td>
                                <td>
                                    <span class="badge
                                            @(log.Action == "UserCreated" || log.Action == "EmployeeAdded" || log.Action == "CustomerAdded" ? "bg-success" :
                                                                                    log.Action == "OrderPlaced" || log.Action == "AppointmentCreated" ? "bg-primary" :
                                                                                    log.Action == "InfoUpdated" || log.Action == "EmployeeUpdated" || log.Action == "CustomerUpdated" ? "bg-warning" :
                                                                                    log.Action == "UserLogin" || log.Action == "DashboardAccessed" ? "bg-info" :
                                                                                    log.Action.Contains("Deleted") ? "bg-danger" : "bg-secondary")">
                                    @log.Action
                                </span>
                            </td>
                            <td>@log.Description</td>
                            <td>@log.UserEmail</td>
                            <td>
                                @if (!string.IsNullOrEmpty(log.AffectedUserName))
                                    {
                                        @log.AffectedUserName
                                        <small class="text-muted d-block">@log.AffectedUserEmail</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Pagination -->
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        @if (ViewBag.HasPreviousPage)
                        {
                            <a href="@Url.Action("Index", new { actionFilter = ViewBag.ActionFilter, fromDate = ViewBag.FromDate, toDate = ViewBag.ToDate, page = ViewBag.CurrentPage - 1 })"
                               class="btn btn-outline-primary">Previous</a>
                        }
                        <span class="mx-3">Page @ViewBag.CurrentPage</span>
                        @if (ViewBag.HasNextPage)
                        {
                            <a href="@Url.Action("Index", new { actionFilter = ViewBag.ActionFilter, fromDate = ViewBag.FromDate, toDate = ViewBag.ToDate, page = ViewBag.CurrentPage + 1 })"
                               class="btn btn-outline-primary">Next</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>