@model E_Commerce.Areas.Dashboard.Models.Appointment

<div class="modal-header bg-danger text-white">
    <h5 class="modal-title"><i class="fas fa-exclamation-triangle me-1"></i>Confirm Delete</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">
    <div class="alert alert-warning alert-permanent mb-4">
        <h6><i class="fas fa-exclamation-circle"></i> Warning</h6>
        <p class="mb-0">Are you sure you want to delete this appointment? This action cannot be undone.</p>
    </div>

    <div class="row">
        <div class="col-12">
            <dl class="row">
                <dt class="col-sm-4">Customer:</dt>
                <dd class="col-sm-8">@Model.Customer?.Name</dd>

                <dt class="col-sm-4">Date:</dt>
                <dd class="col-sm-8">@Model.StartTime.ToString("dd MMMM yyyy")</dd>

                <dt class="col-sm-4">Time:</dt>
                <dd class="col-sm-8">@Model.StartTime.ToString("hh:mm tt")</dd>

                <dt class="col-sm-4">Service:</dt>
                
            </dl>
        </div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        <i class="fas fa-times"></i> Cancel
    </button>
    <form id="deleteAppointmentForm" asp-action="DeleteModalConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        @Html.AntiForgeryToken()
        <button type="button" class="btn btn-danger" onclick="submitModalForm(document.getElementById('deleteAppointmentForm'))">
            <i class="fas fa-trash"></i> Confirm Delete
        </button>
    </form>
</div>