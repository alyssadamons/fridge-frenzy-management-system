@model IEnumerable<E_Commerce.Areas.Dashboard.Models.Appointment>
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Appointments";
}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Appointments</h1>

        <!-- Header Actions -->
        <div class="card mb-3 border-0 shadow-sm">
            <div class="card-body py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title mb-0">Appointment Management</h5>
                        <p class="text-muted mb-0">Manage maintenance appointments and schedules</p>
                    </div>
                    <div>
                        <button class="btn btn-primary me-2" id="btnCreateAppointment">
                            <i class="fas fa-plus me-2"></i> New Appointment
                        </button>
                        
                        <a class="btn btn-outline-info" asp-area="Dashboard" asp-controller="Appointments" asp-action="PastAppointments">
                            <i class="fas fa-history me-2"></i> View Past / Deleted
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search and Filter Section - FIXED PARAMETER NAMES -->
        <div class="card mb-4">
            <div class="card-body">
                <form method="get" asp-area="Dashboard" asp-controller="Appointments" asp-action="Index">
                    <div class="row g-3">
                        <!-- Search Fields -->
                        <div class="col-md-4">
                            <label class="form-label">Search</label>
                            <input type="text" name="search" value="@ViewBag.SearchString" class="form-control" placeholder="Search appointments...">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Filter By</label>
                            <select name="filter" class="form-select">
                                <option value="">All Fields</option>
                                <option value="customer" selected="@(ViewBag.FilterBy == "customer")">Customer</option>
                                <option value="technician" selected="@(ViewBag.FilterBy == "technician")">Technician</option>
                                <option value="issue" selected="@(ViewBag.FilterBy == "issue")">Issue Type</option>
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-search"></i> Search
                            </button>
                            <a asp-area="Dashboard" asp-controller="Appointments" asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-redo"></i> Clear
                            </a>
                        </div>
                        <div class="col-md-2 d-flex align-items-end justify-content-end">
                            <div class="d-flex flex-wrap gap-2">
                                <a class="btn btn-success" asp-area="Dashboard" asp-controller="Appointments" asp-action="ExportExcel"
                                   asp-route-search="@ViewBag.SearchString"
                                   asp-route-filter="@ViewBag.FilterBy">
                                    <i class="fas fa-file-excel me-1"></i> Excel
                                </a>
                                <a class="btn btn-danger" asp-area="Dashboard" asp-controller="Appointments" asp-action="ExportPdf"
                                   asp-route-search="@ViewBag.SearchString"
                                   asp-route-filter="@ViewBag.FilterBy">
                                    <i class="fas fa-file-pdf me-1"></i> PDF
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Status Filter Tabs - FIXED PARAMETER NAMES -->
                    <div class="row mt-3">
                        <div class="col-12">
                            <label class="form-label mb-2">Filter by Status:</label>
                            <div class="d-flex flex-wrap gap-2">
                                <a class="btn btn-outline-primary @(ViewBag.StatusFilter == "all" ? "active" : "")"
                                   asp-area="Dashboard" asp-controller="Appointments" asp-action="Index"
                                   asp-route-statusFilter="all"
                                   asp-route-search="@ViewBag.SearchString"
                                   asp-route-filter="@ViewBag.FilterBy">
                                    All Appointments
                                </a>
                                <a class="btn btn-outline-warning @(ViewBag.StatusFilter == "Pending" ? "active" : "")"
                                   asp-area="Dashboard" asp-controller="Appointments" asp-action="Index"
                                   asp-route-statusFilter="Pending"
                                   asp-route-search="@ViewBag.SearchString"
                                   asp-route-filter="@ViewBag.FilterBy">
                                    <i class="fas fa-clock me-1"></i> Pending (@ViewBag.PendingCount)
                                </a>
                                <a class="btn btn-outline-danger @(ViewBag.StatusFilter == "Incomplete" ? "active" : "")"
                                   asp-area="Dashboard" asp-controller="Appointments" asp-action="Index"
                                   asp-route-statusFilter="Incomplete"
                                   asp-route-search="@ViewBag.SearchString"
                                   asp-route-filter="@ViewBag.FilterBy">
                                    <i class="fas fa-exclamation-triangle me-1"></i> Incomplete (@ViewBag.IncompleteCount)
                                </a>
                                <a class="btn btn-outline-success @(ViewBag.StatusFilter == "Completed" ? "active" : "")"
                                   asp-area="Dashboard" asp-controller="Appointments" asp-action="Index"
                                   asp-route-statusFilter="Completed"
                                   asp-route-search="@ViewBag.SearchString"
                                   asp-route-filter="@ViewBag.FilterBy">
                                    <i class="fas fa-check me-1"></i> Completed (@ViewBag.CompletedCount)
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Appointments Table -->
        <div class="card mb-4 border-0 shadow-sm">
            <div class="card-header bg-light border-0">
                <i class="fas fa-table me-1"></i>
                Appointments List
                <span class="badge bg-primary ms-2">@Model.Count()</span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="align-middle">
                                    <a asp-action="Index"
                                       asp-route-sortOrder="@ViewData["CompanySortParam"]"
                                       asp-route-statusFilter="@ViewBag.StatusFilter"
                                       asp-route-search="@ViewBag.SearchString"
                                       asp-route-filter="@ViewBag.FilterBy">
                                        Company Name
                                        <i class="fas fa-sort"></i>
                                    </a>
                                </th>
                                <th class="align-middle">Contact</th>
                                <th class="align-middle">
                                    <a asp-action="Index"
                                       asp-route-sortOrder="@ViewData["TechnicianSortParam"]"
                                       asp-route-statusFilter="@ViewBag.StatusFilter"
                                       asp-route-search="@ViewBag.SearchString"
                                       asp-route-filter="@ViewBag.FilterBy">
                                        Technician
                                        <i class="fas fa-sort"></i>
                                    </a>
                                </th>
                                <th class="align-middle">
                                    <a asp-action="Index"
                                       asp-route-sortOrder="@ViewData["StartTimeSortParam"]"
                                       asp-route-statusFilter="@ViewBag.StatusFilter"
                                       asp-route-search="@ViewBag.SearchString"
                                       asp-route-filter="@ViewBag.FilterBy">
                                        Start Time
                                        <i class="fas fa-sort"></i>
                                    </a>
                                </th>
                                <th class="align-middle">End Time</th>
                                <th class="align-middle">Issue</th>
                                <th class="align-middle">Status</th>
                                <th class="align-middle text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted py-4">
                                        <i class="fas fa-calendar-times fa-2x mb-2 d-block"></i>
                                        No appointments found
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var a in Model)
                                {
                                    <tr>
                                        <td class="align-middle fw-semibold">@a.Customer?.Name</td>
                                        <td class="align-middle">@a.Customer?.ContactNumber</td>
                                        <td class="align-middle">
                                            @if (a.Employee != null)
                                            {
                                                @($"{a.Employee.FirstName} {a.Employee.LastName}")
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not assigned</span>
                                            }
                                        </td>
                                        <td class="align-middle">
                                            <small class="text-muted">@a.StartTime.ToString("MMM dd")</small>
                                            <br>
                                            <small>@a.StartTime.ToString("HH:mm")</small>
                                        </td>
                                        <td class="align-middle">
                                            <small class="text-muted">@a.EndTime.ToString("MMM dd")</small>
                                            <br>
                                            <small>@a.EndTime.ToString("HH:mm")</small>
                                        </td>
                                        <td class="align-middle">@a.IssueType</td>
                                        <td class="align-middle">
                                            <span class="badge @GetStatusBadgeClass(a.Status)">@a.Status</span>
                                            @if (a.Status == "Incomplete" && a.EmployeeID == null)
                                            {
                                                <br>
                                                <small class="text-muted"><i class="fas fa-user-cog"></i> Needs technician</small>
                                            }
                                            else if (a.Status == "Pending" && a.EmployeeID != null)
                                            {
                                                <br>
                                                <small class="text-muted"><i class="fas fa-check"></i> Ready for work</small>
                                            }
                                        </td>
                                        <td class="align-middle text-center">
                                            <div class="btn-group" role="group">
                                                <button type="button" class="btn btn-outline-info btn-sm"
                                                        onclick="openModal('@Url.Action("ViewModal", new { id = a.Id })')">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button type="button" class="btn btn-outline-warning btn-sm"
                                                        onclick="openModal('@Url.Action("EditModal", new { id = a.Id })')">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                             
                                                <button type="button" class="btn btn-outline-danger btn-sm"
                                                        onclick="openModal('@Url.Action("DeleteModal", new { id = a.Id })')">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- AJAX Modal -->
<div class="modal fade" id="ajaxModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content" id="ajaxModalContent"></div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const ajaxModalEl = document.getElementById('ajaxModal');
            const ajaxModal = new bootstrap.Modal(ajaxModalEl);

            // Open Create modal
            const createBtn = document.getElementById('btnCreateAppointment');
            if (createBtn) {
                createBtn.addEventListener('click', function () {
                    openModal('/Dashboard/Appointments/CreateModal');
                });
            }

                   function openModal(url) {
            fetch(url)
                .then(res => {
                    if (!res.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return res.text();
                })
                .then(html => {
                    document.getElementById('ajaxModalContent').innerHTML = html;
                    ajaxModal.show();
                })
                .catch(error => {
                    console.error('Error loading modal:', error);
                    alert('Error loading form. Please try again.');
                });
        }

            function submitModalForm(form) {
                const formData = new FormData(form);
                fetch(form.action, {
                    method: form.method,
                    body: formData
                })
                .then(res => res.text())
                .then(html => {
                    if (html.includes('form')) {
                        document.getElementById('ajaxModalContent').innerHTML = html;
                    } else {
                        ajaxModal.hide();
                        location.reload();
                    }
                })
                .catch(error => {
                    console.error('Error submitting form:', error);
                    alert('Error submitting form. Please try again.');
                });
                return false;
            }

            window.openModal = openModal;
            window.submitModalForm = submitModalForm;
        });
    </script>
}

@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "incomplete" => "bg-danger",
            "pending" => "bg-warning",
            "completed" => "bg-success",
            "rescheduled" => "bg-info",
            "scheduled" => "bg-primary",
            _ => "bg-secondary"
        };
    }
}