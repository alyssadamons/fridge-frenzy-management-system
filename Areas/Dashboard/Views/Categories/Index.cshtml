@model IEnumerable<E_Commerce.Areas.Dashboard.Models.CategoryViewModel>

@{
    ViewData["Title"] = "Categories";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Categories</h1>

        <!-- Header Card -->
        <div class="card mb-3 border-0 shadow-sm">
            <div class="card-body py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title mb-0">Product Categories</h5>
                        <p class="text-muted mb-0">Manage your product categories</p>
                    </div>
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Add Category
                    </a>
                </div>
            </div>
        </div>

        <!-- Search and Filter Section - FIXED TO MATCH EMPLOYEE STYLE -->
        <div class="card mb-4">
            <div class="card-body">
                <form method="get" asp-action="Index">
                    <div class="row g-3">
                        <!-- Search Fields -->
                        <div class="col-md-4">
                            <label class="form-label">Search by Name</label>
                            <input type="text" name="searchName" class="form-control"
                                   value="@ViewData["SearchName"]" placeholder="Category name">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Search by Description</label>
                            <input type="text" name="searchDescription" class="form-control"
                                   value="@ViewData["SearchDescription"]" placeholder="Description keywords">
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-search"></i> Search
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-redo"></i> Clear
                            </a>
                        </div>
                    </div>

                    <!-- Hidden fields to maintain sort order during search -->
                    <input type="hidden" name="sortOrder" value="@ViewData["CurrentSort"]" />
                </form>
            </div>
        </div>

        

        <!-- Categories Table -->
        <div class="card mb-4 border-0 shadow-sm">
            <div class="card-header bg-light border-0">
                <i class="fas fa-table me-1"></i>
                Categories Table
                <span class="badge bg-primary ms-2">@Model.Count()</span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="align-middle">
                                    <a asp-action="Index"
                                       asp-route-sortOrder="@ViewData["NameSortParam"]"
                                       asp-route-searchName="@ViewData["SearchName"]"
                                       asp-route-searchDescription="@ViewData["SearchDescription"]">
                                        Name
                                        <i class="fas fa-sort"></i>
                                    </a>
                                </th>
                                <th class="align-middle">Image</th>
                                <th class="align-middle">
                                    <a asp-action="Index"
                                       asp-route-sortOrder="@ViewData["DescriptionSortParam"]"
                                       asp-route-searchName="@ViewData["SearchName"]"
                                       asp-route-searchDescription="@ViewData["SearchDescription"]">
                                        Description
                                        <i class="fas fa-sort"></i>
                                    </a>
                                </th>
                                <th class="align-middle text-center">
                                    <a asp-action="Index"
                                       asp-route-sortOrder="@ViewData["ProductCountSortParam"]"
                                       asp-route-searchName="@ViewData["SearchName"]"
                                       asp-route-searchDescription="@ViewData["SearchDescription"]">
                                        Products
                                        <i class="fas fa-sort"></i>
                                    </a>
                                </th>
                                <th class="align-middle text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        <i class="fas fa-tags fa-2x mb-2 d-block"></i>
                                        No categories found
                                        @if (!string.IsNullOrEmpty(ViewData["SearchName"] as string) || !string.IsNullOrEmpty(ViewData["SearchDescription"] as string))
                                        {
                                            <div class="mt-2">
                                                <small>Try adjusting your search criteria</small>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="align-middle fw-semibold">@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td class="align-middle">
                                            <div class="product-image-box">
                                                @if (!string.IsNullOrEmpty(item.Image))
                                                {
                                                    <!-- FIXED: Remove /grp-03-07/ prefix and use Url.Content -->
                                                    <img src="@Url.Content($"~{item.Image.Replace("/grp-03-07/", "/")}")" alt="@item.Name" class="product-table-img"
                                                         onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                                    <div class="no-image-placeholder" style="display: none;">
                                                        <i class="fas fa-image fa-2x text-muted"></i>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="no-image-placeholder">
                                                        <i class="fas fa-image fa-2x text-muted"></i>
                                                    </div>
                                                }
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            <div class="product-desc-cell" title="@item.Description">
                                                @if (!string.IsNullOrEmpty(item.Description))
                                                {
                                                    @item.Description
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No description</span>
                                                }
                                            </div>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="badge bg-info">@item.ProductCount</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>

<style>
    .product-image-box {
        width: 60px;
        height: 60px;
        margin: 0 auto;
    }

    .product-table-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 4px;
    }

    .no-image-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
        border-radius: 4px;
    }

    .product-desc-cell {
        max-width: 300px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .btn-group .btn {
        margin: 0 2px;
    }
</style>