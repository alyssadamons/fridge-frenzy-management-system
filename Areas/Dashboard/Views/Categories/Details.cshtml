@model E_Commerce.Areas.Dashboard.Models.CategoryViewModel

@{
    ViewData["Title"] = "Category Details";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mt-4">Category Details</h1>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <div class="row align-items-stretch">
                    <!-- Image Section -->
                    <div class="col-lg-5 mb-4 mb-lg-0">
                        <div class="category-image-container bg-light rounded-3 p-4 h-100 d-flex align-items-center justify-content-center">
                            @if (!string.IsNullOrEmpty(Model.Image))
                            {
                                <!-- FIXED: Remove /grp-03-07/ prefix and use Url.Content -->
                                <img src="@Url.Content($"~{Model.Image.Replace("/grp-03-07/", "/")}")" alt="@Model.Name" class="product-table-img"
                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                <div class="no-image-placeholder" style="display: none;">
                                    <i class="fas fa-image fa-2x text-muted"></i>
                                </div>
                            }
                            else
                            {
                                <div class="text-center text-muted">
                                    <i class="fas fa-tags fa-5x mb-3"></i>
                                    <p class="mb-0">No Image Available</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Details Section -->
                    <div class="col-lg-7">
                        <div class="ps-lg-4">
                            <div class="d-flex align-items-center mb-4">
                                <h2 class="text-primary mb-0 me-3">@Model.Name</h2>
                                <span class="badge bg-primary fs-6">Category</span>
                            </div>

                            <!-- Description -->
                            <div class="mb-4">
                                <h5 class="text-dark mb-3">
                                    <i class="fas fa-align-left me-2 text-muted"></i>Description
                                </h5>
                                <div class="description-box p-4 bg-light rounded-3 border">
                                    @if (!string.IsNullOrEmpty(Model.Description))
                                    {
                                        <p class="mb-0 text-dark lh-lg">@Model.Description</p>
                                    }
                                    else
                                    {
                                        <p class="mb-0 text-muted fst-italic">No description available for this category.</p>
                                    }
                                </div>
                            </div>

                            <!-- Quick Stats -->
                            <div class="row g-3 mb-4">
                                <div class="col-sm-6">
                                    <div class="card border-0 bg-gradient-primary text-white">
                                        <div class="card-body text-center py-3">
                                            <i class="fas fa-boxes fa-2x mb-2 opacity-75"></i>
                                            <h6 class="mb-1">Products</h6>
                                            <h4 class="mb-0">@Model.ProductCount</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex gap-2 flex-wrap">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4">
                                    <i class="fas fa-edit me-2"></i>Edit Category
                                </a>
                                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                    <i class="fas fa-list me-2"></i>All Categories
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<style>
    .category-image-container {
        min-height: 300px;
        border: 2px dashed #dee2e6;
    }

    .description-box {
        min-height: 120px;
        line-height: 1.7;
    }

    .card.bg-gradient-primary {
        background: linear-gradient(135deg, #4e73df, #7a8fd9) !important;
    }

    .card.bg-gradient-info {
        background: linear-gradient(135deg, #36b9cc, #7cd0df) !important;
    }
</style>