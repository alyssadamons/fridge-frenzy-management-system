@model E_Commerce.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container-fluid px-4">
    <h1 class="mt-4 text-danger">Delete Category</h1>

    <div class="card border-danger mb-4">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-exclamation-triangle me-1"></i>
            Confirm Deletion
        </div>
        <div class="card-body">
            <div class="alert alert-warning alert-permanent">
                <h5><i class="fas fa-exclamation-circle"></i> Warning</h5>
                <p class="mb-0">Are you sure you want to delete this category? This action cannot be undone.</p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                @Model.Description
                            }
                            else
                            {
                                <span class="text-muted">No description</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <!-- FIXED: Remove /grp-03-07/ prefix and use Url.Content -->
                        <img src="@Url.Content($"~{Model.Image.Replace("/grp-03-07/", "/")}")" alt="@Model.Name" class="product-table-img"
                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                        <div class="no-image-placeholder" style="display: none;">
                            <i class="fas fa-image fa-2x text-muted"></i>
                        </div>
                    }
                </div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                @Html.AntiForgeryToken()
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>