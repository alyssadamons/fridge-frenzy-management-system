@model E_Commerce.Models.Category

@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mt-4">Edit Category</h1>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                <i class="fas fa-eye me-2"></i>View Details
            </a>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <form asp-action="Edit" method="post" enctype="multipart/form-data" class="row g-4">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <!-- Left Column - Form Fields -->
                    <div class="col-lg-6">
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-semibold">Category Name</label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter category name" />
                            <span asp-validation-for="Name" class="text-danger small mt-1"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Describe this category..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small mt-1"></span>
                        </div>
                    </div>

                    <!-- Right Column - Image Section -->
                    <div class="col-lg-6">
                        <!-- Current Image -->
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <!-- FIXED: Remove /grp-03-07/ prefix and use Url.Content -->
                            <img src="@Url.Content($"~{Model.Image.Replace("/grp-03-07/", "/")}")" alt="@Model.Name" class="product-table-img"
                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                            <div class="no-image-placeholder" style="display: none;">
                                <i class="fas fa-image fa-2x text-muted"></i>
                            </div>
                        }

                        <!-- Image Upload -->
                        <div class="mb-4">
                            <label for="Image" class="form-label fw-semibold">Update Image</label>
                            <input type="file" name="Image" id="Image" class="form-control" accept="image/*" />
                            <div class="form-text text-muted">
                                <small>Leave empty to keep current image. Max 5MB. Supported: JPG, JPEG, PNG, GIF</small>
                            </div>
                            <span asp-validation-for="Image" class="text-danger small mt-1"></span>
                        </div>

                        <!-- Image Requirements -->
                        <div class="alert alert-info border-0">
                            <div class="d-flex">
                                <i class="fas fa-info-circle fa-lg me-3 mt-1 text-info"></i>
                                <div>
                                    <h6 class="alert-heading mb-2">Image Guidelines</h6>
                                    <ul class="mb-0 small">
                                        <li>Square images work best (1:1 aspect ratio)</li>
                                        <li>Recommended size: 500x500 pixels</li>
                                        <li>Maximum file size: 5MB</li>
                                        <li>Supported formats: JPG, PNG, GIF, WebP</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="col-12">
                        <div class="d-flex gap-2 pt-3 border-top">
                            <button type="submit" class="btn btn-success px-4 py-2">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info px-4 py-2">
                                <i class="fas fa-eye me-2"></i>View Details
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}