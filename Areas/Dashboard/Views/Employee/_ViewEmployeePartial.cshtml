@model E_Commerce.Areas.Dashboard.Models.Employee

<div class="modal-header bg-info text-white">
    <h5 class="modal-title"><i class="fas fa-eye"></i> Employee Details</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">
    <dl class="row">
        <dt class="col-sm-4">First Name</dt>
        <dd class="col-sm-8">@Model.FirstName</dd>

        <dt class="col-sm-4">Last Name</dt>
        <dd class="col-sm-8">@Model.LastName</dd>

        <dt class="col-sm-4">Contact Number</dt>
        <dd class="col-sm-8">@Model.ContactNumber</dd>

        <dt class="col-sm-4">Email</dt>
        <dd class="col-sm-8">@Model.Email</dd>

        <dt class="col-sm-4">Job Title</dt>
        <dd class="col-sm-8">@Model.JobTitle</dd>

        <dt class="col-sm-4">Status</dt>
        <dd class="col-sm-8">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Active</span>
            }
            else
            {
                <span class="badge bg-danger">Inactive</span>
            }
        </dd>
    </dl>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>
