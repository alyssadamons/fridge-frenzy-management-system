@model E_Commerce.Areas.Dashboard.Models.Employee

<div class="modal-header bg-danger text-white">
    <h5 class="modal-title"><i class="fas fa-exclamation-triangle me-2"></i>Confirm Employee Deletion</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">
    <div class="alert alert-warning alert-permanent mb-4">
        <div class="d-flex align-items-center">
            <i class="fas fa-exclamation-circle fa-2x me-3"></i>
            <div>
                <h6 class="mb-1 fw-bold">Warning: Permanent Action</h6>
                <p class="mb-0">Are you sure you want to delete this employee? This action cannot be undone.</p>
            </div>
        </div>
    </div>

    <div class="card border-0 bg-light mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row mb-0">
                        <dt class="col-sm-5 text-muted">Full Name:</dt>
                        <dd class="col-sm-7 fw-bold">@Model.FirstName @Model.LastName</dd>

                        <dt class="col-sm-5 text-muted">Job Title:</dt>
                        <dd class="col-sm-7">@Model.JobTitle</dd>

                        <dt class="col-sm-5 text-muted">Email:</dt>
                        <dd class="col-sm-7">
                            @if (!string.IsNullOrEmpty(Model.Email))
                            {
                                @Model.Email
                            }
                            else
                            {
                                <span class="text-muted">No email</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row mb-0">
                        <dt class="col-sm-5 text-muted">Phone:</dt>
                        <dd class="col-sm-7">
                            @if (!string.IsNullOrEmpty(Model.ContactNumber))
                            {
                                @Model.ContactNumber
                            }
                            else
                            {
                                <span class="text-muted">No phone</span>
                            }
                        </dd>

                        <dt class="col-sm-5 text-muted">Position:</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-info">@Model.Position</span>
                        </dd>

                        <dt class="col-sm-5 text-muted">Status:</dt>
                        <dd class="col-sm-7">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="alert alert-info border-0">
        <div class="d-flex align-items-center">
            <i class="fas fa-info-circle me-3"></i>
            <div>
                <small class="fw-bold">Note:</small>
                <small class="d-block">This action will mark the employee as inactive. Their account access will be revoked immediately.</small>
            </div>
        </div>
    </div>
</div>

<div class="modal-footer bg-light *d-flex justify-content-end gap-2*">
    <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">
        <i class="fas fa-times me-2"></i> Cancel
    </button>
    <form id="deleteEmployeeForm-@Model.EmployeeID" asp-action="DeleteModalConfirmed" method="post" *class="m-0" *>
        <input type="hidden" name="id" value="@Model.EmployeeID" />
        @Html.AntiForgeryToken()
        <button type="button" class="btn btn-danger px-4" onclick="submitModalForm(this.closest('form')); return false;">
            <i class="fas fa-trash me-2"></i> Confirm Delete
        </button>
    </form>
</div>