    <!-- Global JavaScript Functions for Modals -->
    <script>
        // Global modal instance
        let ajaxModal = null;

        // Initialize everything when DOM is loaded
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded - initializing components');

            // Initialize modal
            const ajaxModalEl = document.getElementById('ajaxModal');
            if (ajaxModalEl) {
                ajaxModal = new bootstrap.Modal(ajaxModalEl);
            }

            // Initialize dropdowns manually if needed
            const dropdowns = document.querySelectorAll('.dropdown-toggle');
            dropdowns.forEach(function(dropdown) {
                dropdown.addEventListener('click', function(e) {
                    console.log('Dropdown clicked');
                });
            });

            // Auto-dismiss ONLY temporary alerts (exclude permanent ones)
            const alerts = document.querySelectorAll('.alert:not(.alert-permanent)');
            alerts.forEach(function(alert) {
                setTimeout(function() {
                    if (alert && alert.parentNode) {
                        const bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
                        bsAlert.close();
                    }
                }, 5000);
            });

            // Fix for aria-hidden warning
            if (ajaxModalEl) {
                ajaxModalEl.addEventListener('show.bs.modal', function() {
                    this.removeAttribute('aria-hidden');
                });

                ajaxModalEl.addEventListener('hide.bs.modal', function() {
                    this.setAttribute('aria-hidden', 'true');
                });
            }

            // Enhanced logout form handling
            const logoutForm = document.getElementById('logoutForm');
            if (logoutForm) {
                logoutForm.addEventListener('submit', function(e) {
                    e.preventDefault();

                    // Show loading state
                    const logoutBtn = this.querySelector('button[type="submit"]');
                    const originalText = logoutBtn.innerHTML;
                    logoutBtn.disabled = true;
                    logoutBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Logging out...';

                    // Submit the form via AJAX
                    fetch(this.action, {
                        method: 'POST',
                        body: new FormData(this),
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    })
                    .then(response => {
                        if (response.redirected) {
                            // If server redirects, follow it
                            window.location.href = response.url;
                        } else if (response.ok) {
                            // If successful but no redirect, go to home page
                            window.location.href = '/';
                        } else {
                            // If error, still redirect to home
                            window.location.href = '/';
                        }
                    })
                    .catch(error => {
                        console.error('Logout error:', error);
                        // Even on error, redirect to home
                        window.location.href = '/';
                    });
                });
            }

            // Test dropdown functionality
            console.log('Dropdown elements found:', document.querySelectorAll('.dropdown-toggle').length);
        });

        // Global functions that modals can access
        function togglePasswordVisibility(fieldId, button) {
            console.log('Toggling password for:', fieldId, 'Button:', button);

            const input = document.getElementById(fieldId);
            if (!input) {
                console.error('Input field not found:', fieldId);
                return;
            }

            // Try multiple ways to find the icon
            let icon = button.querySelector('i');
            if (!icon) {
                // Try to find any child element with font-awesome classes
                icon = button.querySelector('.fas, .fa, .far, .fal');
            }
            if (!icon) {
                // If no icon found, check if button itself has the classes
                if (button.classList.contains('fas') || button.classList.contains('fa')) {
                    icon = button;
                } else {
                    console.warn('No icon found in button, toggling input anyway');
                    // Still toggle the input even if no icon found
                    input.type = input.type === 'password' ? 'text' : 'password';
                    return;
                }
            }

            console.log('Current input type:', input.type);

            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
                console.log('Changed to text, icon: fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
                console.log('Changed to password, icon: fa-eye');
            }
        }

        function submitCustomerForm() {
            console.log('Submit button clicked');

            const newPasswordField = document.getElementById('newPasswordEdit');
            const confirmPasswordField = document.getElementById('confirmPasswordEdit');

            const newPass = newPasswordField ? newPasswordField.value : '';
            const confirmPass = confirmPasswordField ? confirmPasswordField.value : '';

            // Validate password only if user entered something
            if (newPass.length > 0 || confirmPass.length > 0) {
                if (newPass.length < 6) {
                    alert('Password must be at least 6 characters long');
                    return false;
                }

                if (newPass !== confirmPass) {
                    alert('Passwords do not match');
                    return false;
                }
                console.log('Password will be updated');
            } else {
                console.log('No password change requested');
            }

            const form = document.getElementById('editCustomerForm');
            if (!form) {
                console.error('Form not found');
                return false;
            }

            if (!form.checkValidity()) {
                // Trigger browser validation UI
                form.reportValidity();
                return false;
            }

            const btn = document.getElementById('updateCustomerBtn');
            if (!btn) {
                console.error('Update button not found');
                return false;
            }

            const originalText = btn.innerHTML;
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Updating...';

            const formData = new FormData(form);

            console.log('Form data being sent:');
            for (let pair of formData.entries()) {
                console.log(pair[0] + ': ' + pair[1]);
            }

            fetch(form.action, {
                method: 'POST',
                body: formData,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                }
            })
            .then(response => {
                console.log('Response status:', response.status);
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.json();
            })
            .then(data => {
                console.log('Full response data:', data);

                if (data.success) {
                    let message = data.message || 'Customer updated successfully!';

                    if (data.tempPassword) {
                        message += '\n\n🔑 NEW PASSWORD: ' + data.tempPassword + '\n\n⚠️ Please save this password securely!';
                    }

                    alert(message);

                    // Close modal and reload after delay
                    setTimeout(() => {
                        if (ajaxModal) {
                            ajaxModal.hide();
                        }

                        setTimeout(() => {
                            location.reload();
                        }, 1000);
                    }, 2000);
                } else {
                    // DISPLAY THE ACTUAL VALIDATION ERRORS
                    let errorMsg = 'Please fix the following errors:\n\n';

                    if (data.errors && data.errors.length > 0) {
                        errorMsg += '• ' + data.errors.join('\n• ');
                    } else if (data.error) {
                        errorMsg += data.error;
                    } else {
                        errorMsg += 'Unknown validation error';
                    }

                    alert(errorMsg);
                    console.log('Validation errors:', data.errors);

                    btn.disabled = false;
                    btn.innerHTML = originalText;
                }
            })
            .catch(error => {
                console.error('Fetch error:', error);
                alert('A network error occurred. Please try again.');
                btn.disabled = false;
                btn.innerHTML = originalText;
            });
        }

        function openModal(url, size = 'lg') {
            console.log('Opening modal:', url, 'Size:', size);

            // Ensure modal is initialized
            if (!ajaxModal) {
                const ajaxModalEl = document.getElementById('ajaxModal');
                if (ajaxModalEl) {
                    ajaxModal = new bootstrap.Modal(ajaxModalEl);
                } else {
                    console.error('Modal element not found');
                    return;
                }
            }

            // Set modal size class
            const modalDialog = document.querySelector('#ajaxModal .modal-dialog');
            if (modalDialog) {
                modalDialog.className = 'modal-dialog modal-dialog-centered';

                if (size === 'sm') {
                    modalDialog.classList.add('modal-sm');
                } else if (size === 'xl') {
                    modalDialog.classList.add('modal-xl');
                } else {
                    modalDialog.classList.add('modal-lg');
                }
            }

            // Show loading state
            document.getElementById('ajaxModalContent').innerHTML = `
                <div class="modal-body text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3">Loading...</p>
                </div>
            `;

            fetch(url)
                .then(res => {
                    if (!res.ok) {
                        throw new Error(`Network response was not ok: ${res.status} ${res.statusText}`);
                    }
                    return res.text();
                })
                .then(html => {
                    document.getElementById('ajaxModalContent').innerHTML = html;
                    if (ajaxModal) {
                        ajaxModal.show();
                    }
                })
                .catch(error => {
                    console.error('Error loading modal:', error);
                    document.getElementById('ajaxModalContent').innerHTML = `
                        <div class="modal-header">
                            <h5 class="modal-title">Error</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <div class="alert alert-danger alert-permanent">
                                <h6>Error loading content</h6>
                                <p class="mb-0">${error.message}</p>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary" onclick="openModal('${url}', '${size}')">Try Again</button>
                        </div>
                    `;
                    if (ajaxModal) {
                        ajaxModal.show();
                    }
                });
        }

        function submitModalForm(form) {
            const formData = new FormData(form);

            fetch(form.action, {
                method: form.method,
                body: formData,
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value,
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(res => {
                const contentType = res.headers.get('content-type');
                if (contentType && contentType.includes('application/json')) {
                    return res.json().then(data => {
                        if (data.success) {
                            if (ajaxModal) {
                                ajaxModal.hide();
                            }
                            location.reload();
                        } else {
                            // Handle validation errors
                            document.getElementById('ajaxModalContent').innerHTML = data.html;
                        }
                    });
                } else {
                    return res.text().then(html => {
                        if (html.includes('form')) {
                            document.getElementById('ajaxModalContent').innerHTML = html;
                        } else {
                            if (ajaxModal) {
                                ajaxModal.hide();
                            }
                            location.reload();
                        }
                    });
                }
            })
            .catch(error => {
                console.error('Error submitting form:', error);
                alert('Error submitting form. Please try again.');
            });

            return false;
        }

        // Helper function to show alerts in modals
        function showAlert(message, type) {
            // Try to find alert container in modal first
            let alertContainer = document.querySelector('#ajaxModal .alert-container');
            if (!alertContainer) {
                alertContainer = document.querySelector('#alertContainer');
            }

            if (!alertContainer) {
                // Fallback to alert
                alert(message);
                return;
            }

            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-permanent alert-dismissible fade show`;
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;

            alertContainer.innerHTML = '';
            alertContainer.appendChild(alertDiv);
        }

        // Enhanced error handling for modal links
        $(document).on('click', '[data-toggle="modal"]', function(e) {
            e.preventDefault();
            const url = $(this).data('url') || $(this).attr('href');
            const size = $(this).data('size') || 'lg';
            openModal(url, size);
        });

        // Global AJAX error handler to redirect to AccessDenied on 401/403
        $(document).ajaxError(function(event, xhr, settings, error) {
            if (xhr.status === 401 || xhr.status === 403) {
                console.log('Unauthorized access detected, redirecting to AccessDenied');
                window.location.href = '/Home/AccessDenied';
            }
        });

        // Handle page navigation errors
        window.addEventListener('error', function(e) {
            console.log('Global error detected:', e);
            // Check if it's an authentication-related error
            if (e.message && (e.message.includes('401') || e.message.includes('403') || e.message.includes('unauthorized'))) {
                window.location.href = '/Home/AccessDenied';
            }
        });

