@model E_Commerce.Areas.Identity.ViewModels.CustomerFridgesViewModel
@{
    ViewData["Title"] = "My Fridges";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="fas fa-refrigerator text-primary"></i> My Fridges</h1>
                <div>
                    <a href="@Url.Action("Index", "Services")" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-arrow-left"></i> Back to Services
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.TotalFridges</h4>
                            <p class="card-text">Registered Fridges</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-refrigerator fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.TotalServices</h4>
                            <p class="card-text">Total Services</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-tools fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Fridges.Any())
    {
        <div class="card-body text-center py-5">
            <div class="mb-4">
                <i class="fas fa-refrigerator fa-4x text-muted"></i>
            </div>
            <h4 class="text-muted">No fridges registered yet</h4>
            <p class="text-muted mb-4">You haven't registered any fridges. Register your first fridge to track its service history.</p>

            
            <a href="/Cart/OrderHistory" class="btn btn-primary">
                <i class="fas fa-shopping-bag me-2"></i>Register from Order History
            </a>

            <a href="@Url.Action("BookAppointment")" class="btn btn-outline-primary ms-2">
                <i class="fas fa-plus me-2"></i>Register New Fridge
            </a>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fas fa-list me-2"></i>My Registered Fridges</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Fridge Model</th>
                                <th>Brand</th>
                                <th>Serial Number</th>
                                <th>Purchase Date</th>
                                <th>Service History</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var fridge in Model.Fridges)
                            {
                                var serviceCount = Model.FridgeServiceHistory.ContainsKey(fridge.Id) ? Model.FridgeServiceHistory[fridge.Id].Count : 0;

                                <tr>
                                    <td>
                                        <strong>@fridge.FridgeName</strong>
                                        @if (fridge.Product != null)
                                        {
                                            <br>
                                            <small class="text-muted">From: @fridge.Product.Name</small>
                                        }
                                    </td>
                                    <td>@(fridge.Brand ?? "Not specified")</td>
                                    <td>@(fridge.SerialNumber ?? "Not provided")</td>
                                    <td>
                                        @fridge.PurchaseDate.ToString("dd MMM yyyy")
                                    </td>
                                    <td>
                                        @if (serviceCount > 0)
                                        {
                                            <span class="badge bg-info">@serviceCount service@(serviceCount != 1 ? "s" : "")</span>
                                            <br>
                                            <small class="text-muted">
                                                Last: @Model.FridgeServiceHistory[fridge.Id].First().StartTime.ToString("dd MMM yyyy")
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">No services</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("FridgeServiceHistory", new { fridgeId = fridge.Id })"
                                               class="btn btn-outline-primary" title="View Service History">
                                                <i class="fas fa-history"></i>
                                            </a>
                                            <a href="@Url.Action("BookAppointment")?fridgeId=@fridge.Id"
                                               class="btn btn-outline-success ms-1" title="Book Service">
                                                <i class="fas fa-tools"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
                        <div class="btn-group" role="group">
                            <a href="@Url.Action("BookAppointment", "Services", new { area = "Identity" })" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Book New Service
                            </a>

                            <a href="@Url.Action("OrderHistory", "Cart", new { area = "" })" class="btn btn-primary ms-2">
                                <i class="fas fa-shopping-bag me-2"></i>Register from Orders
                            </a>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
}