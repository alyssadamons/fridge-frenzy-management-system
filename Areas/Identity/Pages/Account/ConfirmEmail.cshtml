@page
@model E_Commerce.Areas.Identity.Pages.Account.ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm Email";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">

        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-success text-white text-center">
                <h3>@ViewData["Title"]</h3>
            </div>
            <div class="card-body text-center">

                @if (!string.IsNullOrEmpty(Model.StatusMessage))
                {
                    if (Model.StatusMessage.Contains("Thank you") || Model.StatusMessage.Contains("confirmed"))
                    {
                        <div class="alert alert-success" role="alert">
                            @Model.StatusMessage
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger" role="alert">
                            @Model.StatusMessage
                        </div>
                    }
                }

                <a asp-page="/Index" class="btn btn-outline-primary mt-3">
                    Go to Home
                </a>
                <a asp-page="/Account/Login" asp-area="Identity" class="btn btn-outline-secondary mt-3 ms-2">
                    Login
                </a>
            </div>
        </div>

    </div>
</div>
