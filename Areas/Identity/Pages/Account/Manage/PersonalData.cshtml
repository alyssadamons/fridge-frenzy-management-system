@page
@model E_Commerce.Areas.Identity.Pages.Account.Manage.PersonalDataModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="container py-4">
    <div class="row">
        <div class="col-lg-3 mb-4">
            <partial name="_ManageNav" />
        </div>
        <div class="col-lg-9">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0"><i class="fas fa-database me-2"></i>@ViewData["Title"]</h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info alert-permanent">
                        <h5 class="alert-heading"><i class="fas fa-info-circle me-2"></i>About Your Personal Data</h5>
                        <p class="mb-2">Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
                        <p class="mb-0">
                            <strong>
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                Deleting this data will permanently remove your account, and this cannot be recovered.
                            </strong>
                        </p>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-6 mb-3">
                            <div class="card border-0 bg-light">
                                <div class="card-body text-center p-4">
                                    <i class="fas fa-download text-primary fa-3x mb-3"></i>
                                    <h5 class="card-title">Download Your Data</h5>
                                    <p class="card-text text-muted">Get a copy of all your personal data in a readable format.</p>
                                    <form id="download-data" asp-page="DownloadPersonalData" method="post">
                                        <button class="btn btn-primary px-4" type="submit">
                                            <i class="fas fa-download me-2"></i>Download Data
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card border-0 bg-light">
                                <div class="card-body text-center p-4">
                                    <i class="fas fa-trash-alt text-danger fa-3x mb-3"></i>
                                    <h5 class="card-title">Delete Account</h5>
                                    <p class="card-text text-muted">Permanently remove your account and all associated data.</p>
                                    <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger px-4">
                                        <i class="fas fa-trash me-2"></i>Delete Account
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}