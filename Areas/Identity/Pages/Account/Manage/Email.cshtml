@page
@model EmailModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="container py-4">
    <div class="row">
        <div class="col-lg-3 mb-4">
            <partial name="_ManageNav" />
        </div>
        <div class="col-lg-9">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0"><i class="fas fa-envelope me-2"></i>@ViewData["Title"]</h4>
                </div>
                <div class="card-body p-4">
                    <partial name="_StatusMessage" for="StatusMessage" />

                    <form id="email-form" method="post">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger" role="alert">
                                <h5 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Please correct the following errors:</h5>
                                <div asp-validation-summary="All" class="mb-0"></div>
                            </div>
                        }

                        <!-- Current Email -->
                        <div class="mb-4">
                            <h5 class="text-primary mb-3">Current Email Address</h5>
                            @if (Model.IsEmailConfirmed)
                            {
                                <div class="form-floating mb-3">
                                    <div class="input-group">
                                        <input asp-for="Email" class="form-control" placeholder="Please enter your email." disabled />
                                        <span class="input-group-text bg-success text-white">
                                            <i class="fas fa-check-circle"></i> Verified
                                        </span>
                                    </div>
                                    <label asp-for="Email" class="form-label"></label>
                                </div>
                            }
                            else
                            {
                                <div class="form-floating mb-3">
                                    <input asp-for="Email" class="form-control" placeholder="Please enter your email." disabled />
                                    <label asp-for="Email" class="form-label"></label>
                                </div>
                                <div class="mb-3">
                                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail"
                                            class="btn btn-outline-warning">
                                        <i class="fas fa-paper-plane me-2"></i>Send Verification Email
                                    </button>
                                </div>
                            }
                        </div>

                        <!-- New Email -->
                        <div class="mb-4">
                            <h5 class="text-primary mb-3">Change Email Address</h5>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" placeholder="Please enter new email." />
                                <label asp-for="Input.NewEmail" class="form-label">New Email Address</label>
                                <span asp-validation-for="Input.NewEmail" class="text-danger small"></span>
                            </div>
                        </div>

                        <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail"
                                class="btn btn-primary w-100 py-2">
                            <i class="fas fa-sync-alt me-2"></i>Update Email Address
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}