@{
    ViewData["Title"] = "Payment Cancelled";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-body p-5">
                    <i class="bi bi-x-circle-fill text-warning" style="font-size: 80px;"></i>
                    <h2 class="mt-4 mb-3">Payment Cancelled</h2>
                    <p class="lead text-muted">Your PayPal payment was cancelled.</p>
                    <p class="text-muted">No charges have been made to your account. You can try again or choose a different payment method.</p>

                    <hr class="my-4">

                    <div class="d-grid gap-2">
                        <a asp-action="Checkout" asp-controller="Cart" class="btn btn-primary btn-lg">
                            <i class="bi bi-arrow-clockwise"></i> Try Again
                        </a>
                        <a asp-action="Index" asp-controller="Cart" class="btn btn-outline-secondary">
                            <i class="bi bi-cart"></i> Return to Cart
                        </a>
                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">
                            <i class="bi bi-house"></i> Go to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: 1px solid #e0e0e0;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
</style>