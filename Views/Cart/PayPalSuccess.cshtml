@{
    ViewData["Title"] = "Payment Successful";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-body p-5">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 80px;"></i>
                    <h2 class="mt-4 mb-3">Payment Successful!</h2>
                    <p class="lead text-muted">Your PayPal payment has been processed successfully.</p>
                    <p class="text-muted">You will be redirected to your order confirmation shortly.</p>

                    <hr class="my-4">

                    <div class="d-grid gap-2">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-primary btn-lg">
                            <i class="bi bi-house-fill"></i> Return to Home
                        </a>
                        <a asp-action="Index" asp-controller="Cart" class="btn btn-outline-secondary">
                            <i class="bi bi-cart"></i> View Cart
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: 1px solid #e0e0e0;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
</style>