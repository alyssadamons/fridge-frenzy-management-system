@model E_Commerce.Models.Order
@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Success Header -->
            <div class="text-center mb-5">
                <div class="mb-4">
                    <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                </div>
                <h1 class="display-4 text-success mb-3">Order Confirmed!</h1>
                <p class="lead text-muted">Thank you for your purchase. Your order has been successfully placed.</p>
                <div class="alert alert-success mt-4 alert-permanent">
                    <h5 class="alert-heading">Order #@Model.Id</h5>
                    <p class="mb-0">We've sent a confirmation email to your registered email address.</p>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-receipt me-2"></i>Order Summary</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Order Details</h6>
                            <p><strong>Order Number:</strong> #@Model.Id</p>
                            <p><strong>Order Date:</strong> @Model.OrderDate.ToString("dd MMMM yyyy 'at' hh:mm tt")</p>
                            <p><strong>Status:</strong> <span class="badge bg-warning">@Model.Status</span></p>
                        </div>
                        <div class="col-md-6">
                            <h6>Delivery Information</h6>
                            <p><strong>Customer:</strong> @Model.CustomerName</p>
                            <p><strong>Phone:</strong> @Model.CustomerPhone</p>
                            <p><strong>Address:</strong> <span class="text-break">@Model.DeliveryAddress</span></p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Items -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-shopping-bag me-2"></i>Order Items</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="w-40">Product</th>
                                    <th class="text-center w-15">Quantity</th>
                                    <th class="text-end w-25">Unit Price</th>
                                    <th class="text-end w-25">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(item.Product?.Image))
                                                {
                                                    <img src="@Url.Content($"~{item.Product.Image}")" alt="@item.Product.Name"
                                                         class="img-thumbnail me-3" style="width: 60px; height: 60px; object-fit: cover;"
                                                         onerror="this.onerror=null; this.src='https://via.placeholder.com/60x60?text=Image+Not+Found';">
                                                }
                                                <div class="flex-grow-1">
                                                    <strong>@item.Product?.Name</strong>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center align-middle">@item.Quantity</td>
                                        <td class="text-end align-middle">R @item.Price.ToString("N2")</td>
                                        <td class="text-end align-middle fw-bold">R @((item.Quantity * item.Price).ToString("N2"))</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Subtotal:</strong></td>
                                    <td class="text-end"><strong>R @Model.SubTotal.ToString("N2")</strong></td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Delivery Fee:</strong></td>
                                    <td class="text-end"><strong>R @Model.DeliveryFee.ToString("N2")</strong></td>
                                </tr>
                                <tr class="table-success">
                                    <td colspan="3" class="text-end"><strong class="fs-5">Total Amount:</strong></td>
                                    <td class="text-end"><strong class="fs-4">R @Model.Total.ToString("N2")</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-grid gap-3 d-md-flex justify-content-between mt-5">
                <a href="@Url.Action("OrderHistory")" class="btn btn-outline-primary btn-lg flex-fill me-md-2">
                    <i class="fas fa-history me-2"></i>View Order History
                </a>
                <div class="d-grid gap-2 d-md-flex flex-fill">
                    <a href="@Url.Action("DownloadInvoice", new { orderId = Model.Id })" class="btn btn-outline-secondary btn-lg flex-fill me-md-2">
                        <i class="fas fa-download me-2"></i>Download Invoice
                    </a>
                    <a href="@Url.Action("Index", "Purchasing")" class="btn btn-primary btn-lg flex-fill">
                        <i class="fas fa-shopping-cart me-2"></i>Continue Shopping
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Ensure text doesn't break layout */
    .text-break {
        word-break: break-word;
        overflow-wrap: break-word;
    }

    /* Mobile responsiveness */
    @@media (max-width: 768px) {
        .table-responsive {
            font-size: 0.875rem;
        }

        .btn-lg {
            font-size: 1rem;
            padding: 0.75rem 1rem;
        }

        .display-4 {
            font-size: 2rem;
        }
        /* Stack buttons on mobile */
        .d-md-flex {
            flex-direction: column;
        }

        .me-md-2 {
            margin-right: 0 !important;
            margin-bottom: 0.5rem;
        }
    }
</style>