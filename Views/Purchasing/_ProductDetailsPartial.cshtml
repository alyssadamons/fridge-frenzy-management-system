@model E_Commerce.Models.Product

<div class="row">
    <div class="col-md-6">
        <div class="text-center">
            <img src="@Url.Content($"~{Model.Image}")" alt="@Model.Name" class="img-fluid product-details-image" style="max-height: 400px;"
                 onerror="this.onerror=null; this.src='https://via.placeholder.com/400x400?text=Image+Not+Found';">
        </div>
    </div>
    <div class="col-md-6">
        <h3 class="fw-bold">@Model.Name</h3>

        @if (!string.IsNullOrEmpty(Model.Category?.Name))
        {
            <div class="mb-2">
                <span class="badge bg-primary">@Model.Category.Name</span>
            </div>
        }

        <div class="mb-3">
            <h4 class="text-primary fw-bold">R @Model.Price.ToString("N2")</h4>
        </div>

        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="mb-4">
                <h5 class="fw-semibold">Description</h5>
                <p class="text-muted">@Model.Description</p>
            </div>
        }
        else
        {
            <div class="mb-4">
                <p class="text-muted fst-italic">No description available for this product.</p>
            </div>
        }

        <div class="product-features">
            <div class="d-flex align-items-center mb-2">
                <i class="fas fa-shipping-fast text-success me-2"></i>
                <small class="text-muted">Free shipping on orders over R500</small>
            </div>
            <div class="d-flex align-items-center mb-2">
                <i class="fas fa-undo-alt text-info me-2"></i>
                <small class="text-muted">30-day return policy</small>
            </div>
            <div class="d-flex align-items-center">
                <i class="fas fa-shield-alt text-warning me-2"></i>
                <small class="text-muted">Secure checkout</small>
            </div>
        </div>
    </div>
</div>