@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header Section -->
            <div class="text-center mb-5">
                <div class="d-flex align-items-center justify-content-center mb-3">
                    <i class="fas fa-shield-alt fa-2x text-primary me-3"></i>
                    <h1 class="display-5 fw-bold text-dark mb-0">@ViewData["Title"]</h1>
                </div>
                <p class="lead text-muted">
                    Protecting your privacy is at the heart of everything we do
                </p>
            </div>

            <!-- Introduction Card -->
            <div class="card border-0 shadow-sm mb-5">
                <div class="card-body p-4">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-lock text-primary fa-lg me-3 mt-1"></i>
                        <div>
                            <h5 class="card-title mb-3">Our Commitment to You</h5>
                            <p class="card-text mb-0">
                                At <strong class="text-primary">Fridge Frenzy</strong>, your privacy is our priority. We are dedicated to maintaining the
                                trust and confidence of our customers, visitors, and users. This Privacy Policy explains how we collect,
                                use, disclose, and protect your information when you interact with our website, make purchases,
                                or use our services. We comply with the Protection of Personal Information Act (POPIA) and other applicable
                                data protection regulations.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Policy Sections -->
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <!-- Section 1 -->
                    <div class="policy-section mb-4">
                        <div class="d-flex align-items-center mb-3">
                            <span class="policy-number bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center me-3">1</span>
                            <h4 class="mb-0">Information We Collect</h4>
                        </div>
                        <div class="ps-5">
                            <div class="info-item mb-3">
                                <div class="d-flex align-items-start mb-2">
                                    <i class="fas fa-user-circle text-success me-2 mt-1"></i>
                                    <div>
                                        <strong class="me-2">Personal Information:</strong>
                                        <span>Name, email address, phone number, physical address, identity number (for credit checks), and billing details</span>
                                        <small class="d-block text-muted mt-1">Collected during account registration, purchases, and service bookings</small>
                                    </div>
                                </div>
                            </div>
                            <div class="info-item mb-3">
                                <div class="d-flex align-items-start mb-2">
                                    <i class="fas fa-id-card text-info me-2 mt-1"></i>
                                    <div>
                                        <strong class="me-2">Account Data:</strong>
                                        <span>Account creation details, login activity, preferences, communication history, and service interactions</span>
                                        <small class="d-block text-muted mt-1">Used to personalize your experience and maintain service records</small>
                                    </div>
                                </div>
                            </div>
                            <div class="info-item mb-3">
                                <div class="d-flex align-items-start mb-2">
                                    <i class="fas fa-chart-line text-warning me-2 mt-1"></i>
                                    <div>
                                        <strong class="me-2">Service & Usage Data:</strong>
                                        <span>Maintenance requests, purchases, fault reports, equipment specifications, service history, and warranty information</span>
                                        <small class="d-block text-muted mt-1">Essential for providing ongoing maintenance and support services</small>
                                    </div>
                                </div>
                            </div>
                            <div class="info-item mb-3">
                                <div class="d-flex align-items-start mb-2">
                                    <i class="fas fa-credit-card text-danger me-2 mt-1"></i>
                                    <div>
                                        <strong class="me-2">Payment Information:</strong>
                                        <span>Credit card details, bank account information, and transaction history processed securely through PCI-DSS compliant payment processors</span>
                                        <small class="d-block text-muted mt-1">We never store full credit card numbers on our servers</small>
                                    </div>
                                </div>
                            </div>
                            <div class="info-item">
                                <div class="d-flex align-items-start mb-2">
                                    <i class="fas fa-cookie text-secondary me-2 mt-1"></i>
                                    <div>
                                        <strong class="me-2">Cookies and Tracking:</strong>
                                        <span>Session cookies, authentication tokens, analytical data (Google Analytics), and site performance metrics</span>
                                        <small class="d-block text-muted mt-1">Used to improve website functionality and user experience</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Section 2 -->
                    <div class="policy-section mb-4">
                        <div class="d-flex align-items-center mb-3">
                            <span class="policy-number bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center me-3">2</span>
                            <h4 class="mb-0">How We Use Your Information</h4>
                        </div>
                        <div class="ps-5">
                            <ul class="list-unstyled">
                                <li class="mb-3">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    <strong>Service Delivery:</strong> Provide, manage, and enhance our refrigeration services including installations, repairs, and maintenance
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    <strong>Account Management:</strong> Create and maintain your customer account securely, process transactions, and manage service agreements
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    <strong>Communication:</strong> Send service updates, appointment confirmations, support responses, and important safety notifications
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    <strong>Personalization:</strong> Customize your experience, recommend relevant products/services, and offer targeted promotions
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    <strong>Legal Compliance:</strong> Meet regulatory requirements, prevent fraud, and ensure the security of our systems and users
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    <strong>Service Improvement:</strong> Analyze usage patterns to enhance our services, develop new features, and optimize customer support
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Section 3 - Enhanced -->
                    <div class="policy-section mb-4">
                        <div class="d-flex align-items-center mb-3">
                            <span class="policy-number bg-info text-white rounded-circle d-inline-flex align-items-center justify-content-center me-3">3</span>
                            <h4 class="mb-0">Sharing Your Information</h4>
                        </div>
                        <div class="ps-5">
                            <div class="alert alert-light border mb-4">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-handshake text-info me-3 mt-1"></i>
                                    <div>
                                        <strong>Trusted Service Partners</strong>
                                        <p class="mb-2">We share necessary information with carefully vetted partners who help deliver our services:</p>
                                        <ul class="mb-2">
                                            <li><strong>Payment Processors:</strong> Secure payment gateways (PayFast, PayPal) for transaction processing</li>
                                            <li><strong>Delivery Services:</strong> Courier companies for product deliveries (address and contact details only)</li>
                                            <li><strong>Technicians:</strong> Qualified service personnel for maintenance appointments (service history and contact information)</li>
                                            <li><strong>Cloud Services:</strong> Secure data storage providers with SOC 2 compliance</li>
                                        </ul>
                                        <small class="text-muted">All partners sign strict confidentiality agreements and comply with data protection standards</small>
                                    </div>
                                </div>
                            </div>

                            <div class="alert alert-light border mb-4">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-gavel text-warning me-3 mt-1"></i>
                                    <div>
                                        <strong>Legal Requirements</strong>
                                        <p class="mb-2">We may disclose your information when required by law or to:</p>
                                        <ul class="mb-0">
                                            <li>Comply with legal processes, court orders, or government requests</li>
                                            <li>Protect our rights, property, or safety, and that of our users</li>
                                            <li>Investigate potential fraud, security breaches, or violations of our terms</li>
                                            <li>Support legal claims or proceedings where necessary</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <div class="alert alert-light border mb-4">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-chart-bar text-primary me-3 mt-1"></i>
                                    <div>
                                        <strong>Business Transfers</strong>
                                        <p class="mb-0">In the event of a merger, acquisition, or sale of all or portion of our assets, your information may be transferred to the new entity. We will notify you and provide choices regarding your information before any transfer under new privacy terms.</p>
                                    </div>
                                </div>
                            </div>

                            <div class="alert alert-light border">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-ban text-danger me-3 mt-1"></i>
                                    <div>
                                        <strong>No Marketing Data Sales</strong>
                                        <p class="mb-0">We never sell, rent, or trade your personal data with any third parties for marketing purposes. Any marketing communications you receive will be directly from Fridge Frenzy, and you can opt-out at any time.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Section 4 -->
                    <div class="policy-section mb-4">
                        <div class="d-flex align-items-center mb-3">
                            <span class="policy-number bg-warning text-dark rounded-circle d-inline-flex align-items-center justify-content-center me-3">4</span>
                            <h4 class="mb-0">Data Protection & Security</h4>
                        </div>
                        <div class="ps-5">
                            <div class="d-flex align-items-start mb-4">
                                <i class="fas fa-shield-alt text-warning me-3 mt-1"></i>
                                <div>
                                    <p class="mb-3">
                                        We implement comprehensive security measures to protect your personal data throughout its lifecycle:
                                    </p>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <ul class="list-unstyled">
                                                <li class="mb-2"><i class="fas fa-lock text-success me-2"></i>End-to-end encryption (TLS/SSL)</li>
                                                <li class="mb-2"><i class="fas fa-user-shield text-info me-2"></i>Multi-factor authentication</li>
                                                <li class="mb-2"><i class="fas fa-network-wired text-primary me-2"></i>Secure network infrastructure</li>
                                            </ul>
                                        </div>
                                        <div class="col-md-6">
                                            <ul class="list-unstyled">
                                                <li class="mb-2"><i class="fas fa-virus-slash text-danger me-2"></i>Regular security audits</li>
                                                <li class="mb-2"><i class="fas fa-users-cog text-warning me-2"></i>Role-based access controls</li>
                                                <li class="mb-2"><i class="fas fa-cloud-upload-alt text-secondary me-2"></i>Secure data backups</li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="mt-3 p-3 bg-light rounded">
                                        <small class="text-muted">
                                            <i class="fas fa-info-circle me-1"></i>
                                            <strong>Note:</strong> While we implement industry-standard security measures, no electronic transmission or storage method is 100% secure.
                                            We continuously monitor and update our security practices to address emerging threats.
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Section 5 -->
                    <div class="policy-section mb-4">
                        <div class="d-flex align-items-center mb-3">
                            <span class="policy-number bg-danger text-white rounded-circle d-inline-flex align-items-center justify-content-center me-3">5</span>
                            <h4 class="mb-0">Data Retention</h4>
                        </div>
                        <div class="ps-5">
                            <div class="d-flex align-items-start">
                                <i class="fas fa-database text-danger me-3 mt-1"></i>
                                <div>
                                    <p class="mb-3">
                                        We retain your information only for as long as necessary to fulfill the purposes outlined in this policy,
                                        or as required by applicable laws and regulations:
                                    </p>
                                    <div class="retention-info">
                                        <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                                            <span>Account Information</span>
                                            <span class="badge bg-primary">7 years after last activity</span>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                                            <span>Financial Records</span>
                                            <span class="badge bg-primary">5 years (tax compliance)</span>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                                            <span>Service History</span>
                                            <span class="badge bg-primary">10 years (warranty purposes)</span>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center py-2">
                                            <span>Marketing Data</span>
                                            <span class="badge bg-primary">Until opt-out requested</span>
                                        </div>
                                    </div>
                                    <p class="mt-3 mb-0">
                                        When no longer needed, your data is securely deleted or anonymized using industry-standard data destruction methods.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Section 6 -->
                    <div class="policy-section mb-4">
                        <div class="d-flex align-items-center mb-3">
                            <span class="policy-number bg-secondary text-white rounded-circle d-inline-flex align-items-center justify-content-center me-3">6</span>
                            <h4 class="mb-0">Your Rights</h4>
                        </div>
                        <div class="ps-5">
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <ul class="list-unstyled">
                                        <li class="mb-3">
                                            <i class="fas fa-eye text-primary me-2"></i>
                                            <strong>Access:</strong> Request a copy of all personal information we hold about you
                                        </li>
                                        <li class="mb-3">
                                            <i class="fas fa-edit text-success me-2"></i>
                                            <strong>Correction:</strong> Update or correct inaccurate or incomplete information
                                        </li>
                                        <li class="mb-3">
                                            <i class="fas fa-trash-alt text-danger me-2"></i>
                                            <strong>Deletion:</strong> Request deletion of personal data (subject to legal requirements)
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <ul class="list-unstyled">
                                        <li class="mb-3">
                                            <i class="fas fa-bell-slash text-warning me-2"></i>
                                            <strong>Opt-out:</strong> Unsubscribe from marketing communications at any time
                                        </li>
                                        <li class="mb-3">
                                            <i class="fas fa-undo text-info me-2"></i>
                                            <strong>Withdraw Consent:</strong> Revoke previously given consent for data processing
                                        </li>
                                        <li class="mb-3">
                                            <i class="fas fa-download text-secondary me-2"></i>
                                            <strong>Data Portability:</strong> Receive your data in a machine-readable format
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="alert alert-info">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-clock me-3 mt-1"></i>
                                    <div>
                                        <strong>Exercise Your Rights:</strong> To exercise any of these rights, please contact our Information Officer using the details in Section 9.
                                        We will respond to your request within 21 business days as required by POPIA.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Section 7 -->
                    <div class="policy-section mb-4">
                        <div class="d-flex align-items-center mb-3">
                            <span class="policy-number bg-dark text-white rounded-circle d-inline-flex align-items-center justify-content-center me-3">7</span>
                            <h4 class="mb-0">Cookies & Tracking Technologies</h4>
                        </div>
                        <div class="ps-5">
                            <div class="d-flex align-items-start">
                                <i class="fas fa-cookie-bite text-dark me-3 mt-1"></i>
                                <div>
                                    <p class="mb-3">
                                        Our website uses various cookies and tracking technologies to enhance your browsing experience:
                                    </p>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="card mb-3">
                                                <div class="card-body">
                                                    <h6 class="card-title"><i class="fas fa-cookie me-2"></i>Essential Cookies</h6>
                                                    <p class="card-text small">Required for basic site functionality (login, shopping cart)</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="card mb-3">
                                                <div class="card-body">
                                                    <h6 class="card-title"><i class="fas fa-chart-bar me-2"></i>Analytical Cookies</h6>
                                                    <p class="card-text small">Help us understand how visitors use our site (Google Analytics)</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <p class="mb-0">
                                        You can modify your browser settings to decline cookies, though some features of our site may not function properly.
                                        Our cookie banner allows you to manage your preferences when you first visit our site.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Section 8 -->
                    <div class="policy-section mb-4">
                        <div class="d-flex align-items-center mb-3">
                            <span class="policy-number bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center me-3">8</span>
                            <h4 class="mb-0">Policy Updates</h4>
                        </div>
                        <div class="ps-5">
                            <div class="d-flex align-items-start">
                                <i class="fas fa-sync-alt text-primary me-3 mt-1"></i>
                                <div>
                                    <p class="mb-3">
                                        We may update this Privacy Policy from time to time to reflect:
                                    </p>
                                    <ul class="mb-3">
                                        <li>Changes in our data processing practices or services</li>
                                        <li>Legal or regulatory requirements</li>
                                        <li>Security enhancements or technological improvements</li>
                                        <li>Feedback from customers or data protection authorities</li>
                                    </ul>
                                    <p class="mb-0">
                                        Any significant updates will be prominently posted on this page at least 30 days before they take effect,
                                        and we will notify registered users via email when appropriate. The revision date will be updated accordingly.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Section 9 -->
                    <div class="policy-section mb-5">
                        <div class="d-flex align-items-center mb-3">
                            <span class="policy-number bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center me-3">9</span>
                            <h4 class="mb-0">Contact Us</h4>
                        </div>
                        <div class="ps-5">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <div class="d-flex align-items-start">
                                        <i class="fas fa-headset text-success me-3 mt-1"></i>
                                        <div>
                                            <h6 class="mb-2">Information Officer Contact Details</h6>
                                            <p class="mb-2">
                                                If you have any questions, concerns, or requests regarding this Privacy Policy or how your data is handled,
                                                please contact our Information Officer:
                                            </p>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <ul class="list-unstyled small">
                                                        <li class="mb-1"><i class="fas fa-envelope me-2"></i>privacy@fridgefrenzy.com</li>
                                                        <li class="mb-1"><i class="fas fa-phone me-2"></i>081 028 6437</li>
                                                    </ul>
                                                </div>
                                                <div class="col-md-6">
                                                    <ul class="list-unstyled small">
                                                        <li class="mb-1"><i class="fas fa-clock me-2"></i>Mon-Fri: 8:00 AM - 5:00 PM</li>
                                                        <li class="mb-1"><i class="fas fa-map-marker-alt me-2"></i><a href="@Url.Action("Contact", "Home")" class="text-success text-decoration-none">Contact Form</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <p class="mb-0 text-muted mt-2">
                                                <i class="fas fa-clock me-1"></i>
                                                Our support team typically responds within 24 hours. For formal data subject requests, please allow up to 21 business days as required by POPIA.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Last Updated -->
                    <div class="text-center py-4 border-top">
                        <p class="text-muted mb-0">
                            <i class="fas fa-calendar-alt me-2"></i>
                            <em>Last updated: October 2025 | Compliant with POPIA regulations</em>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .policy-number {
        width: 40px;
        height: 40px;
        font-weight: 600;
        font-size: 1.1rem;
        flex-shrink: 0;
    }

    .policy-section {
        padding: 1.5rem;
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        border: 1px solid #e9ecef;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .policy-section:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 20px rgba(0,0,0,0.12);
        }

    .info-item {
        padding: 0.75rem;
        background: #f8f9fa;
        border-radius: 8px;
        border-left: 4px solid #dee2e6;
    }

    .retention-info .badge {
        font-size: 0.75rem;
    }

    .card {
        border-radius: 12px;
    }

    .alert {
        border-radius: 10px;
    }

    h4 {
        color: #2c3e50;
        font-weight: 600;
    }

    .lead {
        color: #6c757d;
        font-weight: 400;
    }

    .list-unstyled li {
        padding: 0.5rem 0;
    }
</style>