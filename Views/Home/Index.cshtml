@{
    ViewData["Title"] = "Home Page";
}

<div class="home-page">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="hero-content">
            <div class="hero-text">
                <h1 class="hero-title">Keepin it cool, Keepin it running</h1>
                <p class="hero-subtitle">
                    The one stop place for premium refrigerators,<br>
                    expert repairs, and reliable maintenance.
                </p>
                <div class="hero-description">
                    <p>
                        At Fridge Frenzy, we're committed to making your experience as cool and convenient as possible.
                        Our platform offers a complete range of services tailored to all your refrigeration needs.
                        Whether you're looking to buy a new fridge, report a fault, or schedule professional
                        maintenance services such as re-gassing and repairs, we've got you covered.
                    </p>
                </div>
            </div>

            <!-- Services Grid positioned next to the text -->
            <div class="services-grid">
                <!-- Purchase a Fridge -->
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-shopping-cart fa-2x"></i>
                    </div>
                    <h3 class="service-title">Purchase a Fridge</h3>
                    <p class="service-description">
                        View your selection of premium fridges
                    </p>
                    <a class="service-link" asp-area="" asp-controller="Purchasing" asp-action="Index">Browse Products</a>
                </div>

                <!-- Maintenance -->
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-tools fa-2x"></i>
                    </div>
                    <h3 class="service-title">Maintenance</h3>
                    <p class="service-description">
                        Book an appointment for fridge maintenance
                    </p>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="service-link" asp-area="Identity" asp-controller="Services" asp-action="Index" >Schedule Service</a>
                    }
                    else
                    {
                        <a class="service-link" asp-area="Identity" asp-page="/Account/Login">Login to Schedule Service</a>
                    }
                </div>

                <!-- Fault Response -->
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-exclamation-triangle fa-2x"></i>
                    </div>
                    <h3 class="service-title">Fault Response</h3>
                    <p class="service-description">
                        Create a fault report on your fridge
                    </p>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="service-link" asp-area="Identity" asp-controller="Services" asp-action="Index" >Report Issue</a>
                    }
                    else
                    {
                        <a class="service-link" asp-area="Identity" asp-page="/Account/Login">Login to Report Issue</a>
                    }
                </div>

                <!-- Customer Service -->
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-headset fa-2x"></i>
                    </div>
                    <h3 class="service-title">Customer Service</h3>
                    <p class="service-description">
                        Manage your account details and preferences
                    </p>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="service-link" asp-area="Identity" asp-page="/Account/Manage/Index">Manage Account</a>
                    }
                    else
                    {
                        <a class="service-link" asp-area="Identity" asp-page="/Account/Login">Login to Manage Account</a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Counter Section -->
    <section class="stats-section py-5">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <div class="stat-number" data-count="500">0</div>
                        <div class="stat-label">Happy Customers</div>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <div class="stat-number" data-count="1200">0</div>
                        <div class="stat-label">Fridges Sold</div>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <div class="stat-number" data-count="850">0</div>
                        <div class="stat-label">Repairs Completed</div>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <div class="stat-number" data-count="24">0</div>
                        <div class="stat-label">Hour Support</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- How It Works Section -->
    <section class="steps-section py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-5">How It Works</h2>
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="step-card text-center">
                        <div class="step-number">1</div>
                        <div class="step-icon">
                            <i class="fas fa-search fa-2x"></i>
                        </div>
                        <h4>Browse & Select</h4>
                        <p>Explore our range of premium refrigerators or schedule a service</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="step-card text-center">
                        <div class="step-number">2</div>
                        <div class="step-icon">
                            <i class="fas fa-calendar-check fa-2x"></i>
                        </div>
                        <h4>Book & Schedule</h4>
                        <p>Choose your preferred date and time for delivery or service</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="step-card text-center">
                        <div class="step-number">3</div>
                        <div class="step-icon">
                            <i class="fas fa-truck fa-2x"></i>
                        </div>
                        <h4>We Deliver/Service</h4>
                        <p>Our team delivers your fridge or performs the scheduled service</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="step-card text-center">
                        <div class="step-number">4</div>
                        <div class="step-icon">
                            <i class="fas fa-thumbs-up fa-2x"></i>
                        </div>
                        <h4>Enjoy & Relax</h4>
                        <p>Your fridge is running perfectly with our ongoing support</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Replace Reviews Section with Local Testimonials -->
